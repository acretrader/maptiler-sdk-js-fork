{
  "name": "@maptiler/sdk",
  "version": "1.0.0",
  "description": "The Javascript & TypeScript map SDK tailored for MapTiler Cloud",
  "main": "dist/maptiler-sdk.mjs",
  "module": "dist/maptiler-sdk.mjs",
  "browser": "dist/maptiler-sdk.umd.js",
  "types": "dist/maptiler-sdk.d.ts",
  "style": "dist/maptiler-sdk.css",
  "type": "module",
  "keywords": ["maptiler", "map", "sdk", "webmap", "cloud", "webGL"],
  "homepage": "https://www.maptiler.com/cloud/",
  "license" : "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/maptiler/maptiler-sdk-js.git"
  },
  "scripts": {
    "build": "rm -rf dist/* ; NODE_ENV=production rollup -c",
    "dev": "rm -rf dist/* ; NODE_ENV=development rollup -c -w",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "doc": "rm -rf docs/* ; typedoc; cp -r images docs/",
    "prepare": "npm run format; npm run lint; npm run build; npm run doc"
  },
  "author": "",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-swc": "^0.2.1",
    "serve": "^14.0.1",
    "terser": "^5.15.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "maplibre-gl": "2.4.0"
  }
}
